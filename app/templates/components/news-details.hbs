<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title pull-left">
      <h3 class="panel-title">{{#link-to "news.details" news.id}}{{news.title}}{{/link-to}}</h3>
    </div>
    <div class="panel-title pull-right">
      {{#link-to "news.details" news.id}}Comments{{/link-to}}
      <span class="badge">{{news.commentsCount}}</span>
      <i>
        {{moment-format news.createdOnDatetime}}
        ({{news.username}})
      </i>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body">
    {{news.contentSafe}}
  </div>
</div>
