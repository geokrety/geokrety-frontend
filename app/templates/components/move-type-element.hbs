{{#each options as |option index|}}
  {{#with (concat this.elementId "-" index) as |id|}}
      <div class="radio">

        <label
          for={{id}}
        >
          <input
            type="radio"
            id={{id}}
            checked={{bs-eq option value}}
            onclick={{action onChange option}}
            name={{name}}
            required={{required}}
            disabled={{disabled}}
            autofocus={{autofocus}}
            tabindex={{tabindex}}
            form={{form}}
            title={{title}}
            value={{get option optionValuePath}}
          >
          {{#if hasblock}}
            {{yield}}
          {{else}}
            {{#if optionLabelPath}}
              {{get option optionLabelPath}} - {{name}}
            {{else}}
              {{option}}
            {{/if}}
          {{/if}}
        </label>
      </div>
  {{/with}}
{{/each}}
