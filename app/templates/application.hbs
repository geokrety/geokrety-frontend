
{{#bs-navbar class="navbar-inverse navbar-fixed-top" as |navbar|}}

  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" }}
      <a class="navbar-brand" href="#">GeoKrety JSONAPI prototype</a>
    {{/link-to}}
  </div>

  {{#navbar.content}}
    {{#navbar.nav class="navbar-right" as |nav|}}
      {{#nav.item}}
        {{#nav.link-to "index"}}Home{{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to "news"}}News{{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to "users"}}Users{{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to "geokrety"}}GeoKrety{{/nav.link-to}}
      {{/nav.item}}


      {{#nav.dropdown as |dd|}}
        {{#dd.toggle}}Profile <span class="caret"></span>{{/dd.toggle}}
        {{#dd.menu as |ddm|}}
          {{#ddm.item}}{{#ddm.link-to "help"}}Settings{{/ddm.link-to}}{{/ddm.item}}
          {{#ddm.item}}{{#ddm.link-to "help"}}Profile{{/ddm.link-to}}{{/ddm.item}}
        {{/dd.menu}}
      {{/nav.dropdown}}

      {{#nav.item}}
        {{#nav.link-to "help"}}Help{{/nav.link-to}}
      {{/nav.item}}
    {{/navbar.nav}}
    {{#navbar.nav class="navbar-right" as |nav|}}
      {{#nav.item}}
        {{#bs-form class="navbar-form" as |form|}}
          {{#form.group validation=firstNameValidation}}
            <input type="text" class="form-control" placeholder="Search...">
          {{/form.group}}
        {{/bs-form}}
      {{/nav.item}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}

<div class="container">
  <div class="row">
    {{outlet}}
  </div>
</div>
