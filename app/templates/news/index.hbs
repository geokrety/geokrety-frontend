<ol class="breadcrumb">
  <li>{{#link-to "index"}}Home{{/link-to}}</li>
  <li class="active">News</li>
</ol>

{{#each model as |news|}}
  {{news-details news=news}}
{{/each}}

{{#if hasClickedLoadMore}}
  {{infinity-loader infinityModel=model triggerOffset=400
  loadingText="Loading..."
  loadedText="No more news!"}}
{{else}}
  <div class="row">
    <div class="col-xs-1 col-xs-offset-5">
      {{#bs-button type="primary" onClick=(toggle "hasClickedLoadMore" this)}}Load moreâ€¦{{/bs-button}}
    </div>
  </div>
{{/if}}
